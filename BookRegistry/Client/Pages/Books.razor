@page "/books"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@using BookRegistry.Shared
@using BookRegistry.Client.Services
@inject IBookService BookService
@inject NavigationManager NavigationManager

<PageTitle>Livros</PageTitle>

<h1>Livros</h1>

<p>
    <a href="book/create" class="btn btn-primary">Criar Novo</a>
</p>

@if (books == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Capa</th>
                <th>Título</th>
                <th>Autor</th>
                <th>Editora</th>
                <th>Data de Publicação</th>
                <th>ISBN</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in books)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(book.CoverImageBase64))
                        {
                            <img src="@($"data:image/png;base64,{book.CoverImageBase64}")" alt="@book.Title" style="max-width: 50px; max-height: 75px;" />
                        }
                    </td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@(book.Publisher?.Name ?? "-")</td>
                    <td>@book.PublishDate.ToShortDateString()</td>
                    <td>@book.ISBN</td>
                    <td>
                        <a href="book/edit/@book.Id" class="btn btn-secondary btn-sm">Editar</a>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteBook(book.Id)">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Book>? books;

    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
    }

    private async Task LoadBooks()
    {
        books = await BookService.GetBooks();
    }

    private async Task DeleteBook(int id)
    {
        await BookService.DeleteBook(id);
        await LoadBooks();
    }
}
